<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5.0dip"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/setDisponible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#ffd4d4d4"
            android:gravity="center" />

        <ImageView
            android:layout_width="2.0dip"
            android:layout_height="match_parent"
            android:layout_marginStart="15.0dip"
            android:layerType="software"
            android:src="@drawable/dotted"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5.0dip"
        android:layout_marginBottom="5.0dip"
        android:elevation="15.0dip"
        app:cardCornerRadius="5.0dip">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/todoimg"
                android:layout_width="6.0dip"
                android:layout_height="fill_parent"
                android:background="@drawable/todaytaskorange_ract"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_marginEnd="10.0dip"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <TextView
                        android:id="@+id/setTitulo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        tools:text="Project meeting"
                        android:textColor="#fffe7d1f"
                        android:textSize="16.0sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/setDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    tools:text="9.30 — 10.30 AM"
                    android:textColor="#ffb8b8b8"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/setDescripcion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1.0dip"
                    android:layout_weight="1.0"
                    tools:text="Mauris non tempor quam, et lacinia sapien. Mauris accumsan eros eget libero posuere vulputate. Etiam elit elit, elementum sed varius at…"
                    android:textColor="#ff9492a4"
                    android:textSize="12.0sp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="10.0dip"
                        android:layout_height="10.0dip"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginRight="5.0dip"
                        android:src="@drawable/circle"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/setEstado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/materialBlue"
                        android:textSize="12.0sp"
                        tools:text="Work"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>