<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.device.Detail_Fragment">

    <androidx.core.widget.NestedScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollingCache="true"
        android:clipToPadding="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10.0dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_corner5"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="12.0dip"
                    android:paddingTop="12.0dip"
                    android:paddingEnd="12.0dip"
                    android:paddingBottom="10.0dip">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="@string/specification"
                        android:textAppearance="@style/CustomTitle1"
                        android:textColor="@color/blackTextColor"
                        android:textSize="15.0sp" />

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_height="wrap_content"
                        style="@style/RippleStyleBlack"
                        android:id="@+id/edit_spec"
                        android:layout_weight="0.5"
                        android:layout_width="0dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/materialBlue"
                            android:textColor="@color/materialBlue"
                            android:fontFamily="@font/poppins"
                            android:gravity="end"
                            android:text="@string/editar" />

                    </com.balysv.materialripple.MaterialRippleLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.0dip"
                    android:layout_marginTop="4.0dip"
                    android:background="@color/lightgrey" />

                <TextView
                    android:padding="16.0dip"
                    android:id="@+id/setDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text="@string/no_hay_spefication"
                    android:textAppearance="@style/RadioNotSelected"
                    android:textColor="@color/fontColor"
                    android:textSize="12.0sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10.0dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_corner5"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="12.0dip"
                    android:paddingTop="12.0dip"
                    android:paddingEnd="12.0dip"
                    android:paddingBottom="10.0dip">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="@string/observacion"
                        android:textAppearance="@style/CustomTitle1"
                        android:textColor="@color/blackTextColor"
                        android:textSize="15.0sp" />


                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_height="wrap_content"
                        style="@style/RippleStyleBlack"
                        android:id="@+id/edit_detail"
                        android:layout_weight="0.5"
                        android:layout_width="0dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/materialBlue"
                            android:textColor="@color/materialBlue"
                            android:fontFamily="@font/poppins"
                            android:gravity="end"
                            android:text="@string/editar" />

                    </com.balysv.materialripple.MaterialRippleLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.0dip"
                    android:layout_marginTop="4.0dip"
                    android:background="@color/lightgrey" />

                <TextView
                    android:padding="16.0dip"
                    android:id="@+id/setObserve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text="@string/no_hay_observe"
                    android:textAppearance="@style/RadioNotSelected"
                    android:textColor="@color/fontColor"
                    android:textSize="12.0sp" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_example" />

                <TextView
                    android:gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    tools:text="Por"/>

                <TextView
                    android:gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    tools:text="Por"/>

                <TextView
                    android:gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:layout_height="match_parent"
                    tools:text="Por"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>